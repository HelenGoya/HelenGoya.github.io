<body>

  <h2>Calculadora de Factura</h2>

  <label for="base">Base imponible (â‚¬):</label>
  <input type="number" id="base" step="0.01" value="0">

  <label for="iva">IVA (%):</label>
  <input type="number" id="iva" step="0.01" value="21">

  <label for="irpf">RetenciÃ³n IRPF (%):</label>
  <input type="number" id="irpf" step="0.01" value="15">

  <button onclick="calcularFactura()">Calcular</button>

  <div class="resultado" id="resultado"></div>

  <script>
    function calcularFactura() {
      const base = parseFloat(document.getElementById('base').value) || 0;
      const iva = parseFloat(document.getElementById('iva').value) || 0;
      const irpf = parseFloat(document.getElementById('irpf').value) || 0;

      const importeIVA = (base * iva) / 100;
      const retencionIRPF = (base * irpf) / 100;
      const total = base + importeIVA - retencionIRPF;

      document.getElementById('resultado').innerHTML = `
        <p>ðŸ§¾ Base imponible: <strong>${base.toFixed(2)} â‚¬</strong></p>
        <p>ðŸ’¸ IVA (${iva}%): <strong>${importeIVA.toFixed(2)} â‚¬</strong></p>
        <p>ðŸ“‰ RetenciÃ³n IRPF (${irpf}%): <strong>- ${retencionIRPF.toFixed(2)} â‚¬</strong></p>
        <p>ðŸ’° <u>Total factura:</u> <strong>${total.toFixed(2)} â‚¬</strong></p>
      `;
    }
  </script>

